@model ONGManager.Models.ONG

@{
    ViewData["Title"] = "Gerenciamento " + @Model.nome_ong;
    ViewData["HideFooter"] = true;
    Layout = "_Layout";
}


<div class="container my-5">
       <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="id" />

        <div class="row g-3">
            <div class="col-md-6 d-flex flex-column">
                <div class="mb-3">
                    <label asp-for="nome_ong" class="form-label">Nome da ONG:</label>
                    <input asp-for="nome_ong" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="email" class="form-label">E-mail:</label>
                    <input asp-for="email" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="facebook" class="form-label">Facebook:</label>
                    <input asp-for="facebook" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="instagram" class="form-label">Instagram:</label>
                    <input asp-for="instagram" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="cidade" class="form-label">Cidade:</label>
                    <input asp-for="cidade" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="estado" class="form-label">Estado:</label>
                    <input asp-for="estado" class="form-control"/>
                </div>
            </div>

            <div class="col-md-6 d-flex flex-column">
                <div class="mb-3">
                    <label asp-for="telefone" class="form-label">Telefone:</label>
                    <input asp-for="telefone" class="form-control" />
                    <small class="text-muted">Será usado por contato via WhatsApp</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Logo:</label>
                    <input type="file" class="form-control" />
                    <input type="hidden" asp-for="caminho_imagem_logo" />
                    <small class="text-muted">Recomendamos que seja pelo menos 256x256</small>
                    <div class="mt-3">
                        <img src="@Model.caminho_imagem_logo" alt="Logo da ONG" style="width: 100px; height: auto;" />
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>

    </form>
</div>
