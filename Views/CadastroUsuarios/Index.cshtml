@model IEnumerable<ONGManager.Models.Usuarios>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .content {
            padding: 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        h1 {
            font-size: 28px;
            font-weight: 600;
            margin: 0;
        }

        .btn-cadastrar {
            background-color: #2567e1;
            color: white;
            border: none;
            border-radius: 24px;
            padding: 8px 24px;
            font-size: 16px;
            text-decoration: none;
        }

            .btn-cadastrar:hover {
                background-color: #1c54c0;
                color: white;
            }

        .table-container {
            margin: 0 auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th {
                padding: 10px 16px;
                border: 1px solid #d0d0d0;
                font-weight: 600;
                font-size: 16px;
                text-align: left;
                background-color: #f8f8f8;
            }

            .table td {
                padding: 10px 16px;
                border: 1px solid #d0d0d0;
                font-size: 16px;
            }

        .action-column {
            width: 100px;
            text-align: center;
        }

        .action-btn {
            background: none;
            border: none;
            cursor: pointer;
            padding: 4px;
            margin: 0 2px;
        }

        /* Remover outline ao clicar */
        a:focus, button:focus {
            outline: none !important;
            box-shadow: none !important;
        }

        /* Estilos ajustados da paginação */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 15px;
            gap: 0;
            align-items: center;
        }

        .page-item {
            list-style: none;
        }

        .page-link {
            padding: 2px 6px;
            border: none;
            color: #333;
            background-color: transparent;
            text-decoration: none;
            font-size: 14px;
        }

        .page-item.active .page-link {
            font-weight: bold;
            color: #000;
            background-color: transparent;
        }

        .page-item.disabled .page-link {
            color: #999;
        }

        .page-nav {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="content">
        <div class="page-header">
            <h1>Usuários</h1>
            <a asp-action="Create" class="btn-cadastrar">Cadastrar</a>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nome usuário</th>
                        <th>Nível de acesso</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.usuario</td>
                                <td>@item.nivel</td>
                                <td class="action-column">
                                    <a asp-action="Edit" asp-route-id="@item.id" class="action-btn">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M17 3a2.85 2.85 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                                        </svg>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.id" class="action-btn">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="3 6 5 6 21 6"></polyline>
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <!-- Dados de exemplo para quando não houver dados -->
                        <tr>
                            <td>Lídia</td>
                            <td>administrador</td>
                            <td class="action-column">
                                <a href="#" class="action-btn">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 3a2.85 2.85 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                                    </svg>
                                </a>
                                <a href="#" class="action-btn">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                        <!-- Outros dados de exemplo omitidos para brevidade -->
                    }
                </tbody>
            </table>
        </div>

        <nav aria-label="Paginação">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link page-nav" href="#" aria-label="Anterior">
                        <span aria-hidden="true">&lt;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                <li class="page-item"><a class="page-link" href="#">9</a></li>
                <li class="page-item"><a class="page-link" href="#">10</a></li>
                <li class="page-item">
                    <a class="page-link page-nav" href="#" aria-label="Próximo">
                        <span aria-hidden="true">&gt;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>