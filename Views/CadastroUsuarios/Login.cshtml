@model ONGManager.Models.Usuarios
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 500px;
            padding: 20px;
        }

        .logo-img {
            width: 150px;
            height: auto;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 40px;
            text-align: center;
            color: #000000;
        }

        .form-group {
            margin-bottom: 20px;
            width: 100%;
            max-width: 430px;
        }

        .form-control {
            background-color: #e0e0e0;
            border: none;
            border-radius: 24px;
            padding: 15px 25px;
            font-size: 16px;
            width: 100%;
            height: 55px;
        }

            .form-control::placeholder {
                color: #999999;
            }

        .login-btn-container {
            margin-top: 30px;
            text-align: center;
        }

        .login-btn {
            background-color: #2567e1;
            color: white;
            border: none;
            border-radius: 24px;
            padding: 12px 50px;
            font-size: 18px;
            cursor: pointer;
            min-width: 150px;
        }

            .login-btn:hover {
                background-color: #1c54c0;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/assets/logoOng.png" alt="Logo ONG" class="logo-img" />

        <h1>Que bom te ver de novo!</h1>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <input asp-for="usuario" type="text" class="form-control" placeholder="usuário" />
            </div>

            <div class="form-group">
                <input asp-for="senha" type="password" class="form-control" placeholder="senha" />
            </div>

            <div class="login-btn-container">
                <button type="submit" class="login-btn">Entrar</button>
            </div>
        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>