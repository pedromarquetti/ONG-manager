@model ONGManager.Models.CadastroAnimal

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Animal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .content {
            padding: 40px 24px;
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 32px;
        }

        .form-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        .form-label {
            font-size: 16px;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            background-color: #e0e0e0;
            border: none;
            border-radius: 24px;
            padding: 12px 20px;
            margin-bottom: 24px;
            font-size: 16px;
            height: auto;
        }

        .radio-group {
            display: flex;
            gap: 24px;
            margin-bottom: 24px;
        }

        .radio-option {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }

        .radio-circle {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 2px solid #000;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

            .radio-circle::after {
                content: "";
                width: 12px;
                height: 12px;
                border-radius: 50%;
                background-color: #000;
                display: none;
            }

        .radio-option input:checked + .radio-circle::after {
            display: block;
        }

        .radio-option input {
            display: none;
        }

        .animal-icon {
            margin-right: 4px;
        }

        .photo-section {
            margin-bottom: 24px;
        }

        .photo-container {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .animal-photo {
            width: 180px;
            height: 180px;
            object-fit: cover;
            border-radius: 4px;
        }

        .upload-btn {
            background-color: #e0e0e0;
            border: none;
            border-radius: 24px;
            padding: 12px 20px;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 100%;
            max-width: 220px;
            cursor: pointer;
        }

        .upload-info {
            font-size: 14px;
            color: #666;
            margin-top: 8px;
        }

        .bio-textarea {
            background-color: #e0e0e0;
            border: none;
            border-radius: 16px;
            padding: 16px;
            width: 100%;
            height: 220px;
            resize: none;
            font-size: 16px;
        }

        .save-btn {
            background-color: #2567e1;
            color: white;
            border: none;
            border-radius: 24px;
            padding: 12px 40px;
            font-size: 18px;
            margin-top: 24px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

            .save-btn:hover {
                background-color: #1c54c0;
            }

        @@media (max-width: 768px) {
            .form-layout {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="content">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="tipo_animal" />
            <input type="hidden" asp-for="porte_animal" />

            <!-- Campos ocultos que não aparecem no design mas são necessários -->
            <input type="hidden" asp-for="disponivel" />
            <input type="hidden" asp-for="Porte" />

            <h1>Editar Animal</h1>

            <div class="form-layout">
                <div>
                    <div>
                        <label class="form-label">Nome:</label>
                        <input asp-for="nome" class="form-control" />
                        <span asp-validation-for="nome" class="text-danger"></span>
                    </div>

                    <div>
                        <label class="form-label">Raça:</label>
                        <input asp-for="raca" class="form-control" />
                        <span asp-validation-for="raca" class="text-danger"></span>
                    </div>

                    <div>
                        <label class="form-label">Idade:</label>
                        <input asp-for="idade" type="text" class="form-control" />
                        <span asp-validation-for="idade" class="text-danger"></span>
                    </div>

                    <div>
                        <label class="form-label">Cidade:</label>
                        <input asp-for="cidade" class="form-control" placeholder="Digite a cidade" />
                        <span asp-validation-for="cidade" class="text-danger"></span>
                    </div>

                    <div>
                        <label class="form-label">Estado:</label>
                        <input asp-for="estado" class="form-control" placeholder="Digite o estado" />
                        <span asp-validation-for="estado" class="text-danger"></span>
                    </div>

                    <div>
                        <label class="form-label">Tipo:</label>
                        <div class="radio-group">
                            <label class="radio-option">
                                <input type="radio" id="cachorro" name="TipoAnimal" value="Cachorro" checked />
                                <span class="radio-circle"></span>
                                <span class="animal-icon">
                                    <img src="~/assets/Icone cachorro.png" alt="" />
                                </span>
                                Cachorro
                            </label>
                            <label class="radio-option">
                                <input type="radio" id="gato" name="TipoAnimal" value="Gato" />
                                <span class="radio-circle"></span>
                                <span class="animal-icon">
                                    <img src="~/assets/Icone gato.png" alt="" />
                                </span>
                                Gato
                            </label>
                            <label class="radio-option">
                                <input type="radio" id="outro" name="TipoAnimal" value="Outro" />
                                <span class="radio-circle"></span>
                                <span class="animal-icon">
                                    <img src="~/assets/icone animais.png" alt="" />
                                </span>
                                Outro
                            </label>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="photo-section">
                        <label class="form-label">Foto:</label>
                        <div class="photo-container">
                            <img src="@(Model.Imagens?.FirstOrDefault()?.imagem ?? "/assets/fotoPet.png")"
                                 alt="Foto do animal" class="animal-photo" id="animalPhotoPreview">
                            <div>
                                <button type="button" class="upload-btn" id="uploadButton">
                                    <i class="bi bi-upload"></i> Upload
                                </button>
                                <input type="file" id="fileInput" accept="image/*" style="display: none;">
                                <div class="upload-info">
                                    Recomendamos que seja pelo menos 720x720
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="form-label">Biografia:</label>
                        <textarea asp-for="biografia" class="bio-textarea"></textarea>
                    </div>
                </div>
            </div>

            <button type="submit" class="save-btn">Salvar</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Controle dos radios
            const radioOptions = document.querySelectorAll('.radio-option');
            radioOptions.forEach(option => {
                option.addEventListener('click', function() {
                    this.querySelector('input[type="radio"]').checked = true;
                });
            });

            // Controle do upload
            const uploadButton = document.getElementById('uploadButton');
            const fileInput = document.getElementById('fileInput');
            const photoPreview = document.getElementById('animalPhotoPreview');

            uploadButton.addEventListener('click', () => fileInput.click());

                    fileInput.addEventListener('change', async function(e) {
            const file = e.target.files[0];
            if (!file) return;

            // Validações
            if (!file.type.startsWith('image/')) {
                alert('Por favor, selecione um arquivo de imagem válido.');
                return;
            }

            if (file.size > 5 * 1024 * 1024) { // 5MB
                alert('O arquivo é muito grande. Tamanho máximo: 5MB');
                return;
            }

            // Pré-visualização
            photoPreview.src = URL.createObjectURL(file);

            // Upload
            const formData = new FormData();
            formData.append('arquivo', file);

            try {
                const response = await fetch(`/api/Imagens/upload/@Model.id`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                const result = await response.json();

                if (!response.ok || !result.success) {
                    throw new Error(result.message || 'Falha no upload');
                }

                console.log('Upload realizado:', result);
                window.location.reload();

            } catch (error) {
                console.error('Erro no upload:', error);
                alert('Erro ao enviar imagem: ' + error.message);
                photoPreview.src = '@Url.Content(Model.Imagens?.FirstOrDefault()?.imagem ?? "~/assets/fotoPet.png")';
            }
        });
        });
    </script>
</body>
</html>